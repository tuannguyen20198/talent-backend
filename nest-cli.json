{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/bff-service/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/bff-service/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/bff-service",
  "projects": {
    "@apps/bff-service": {
      "type": "application",
      "root": "apps/bff-service",
      "entryFile": "main",
      "sourceRoot": "apps/bff-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bff-service/tsconfig.app.json"
      }
    },
    "@apps/sso-service": {
      "type": "application",
      "root": "apps/sso-service",
      "entryFile": "main",
      "sourceRoot": "apps/sso-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sso-service/tsconfig.app.json"
      }
    },
    "@apps/talent-service": {
      "type": "application",
      "root": "apps/talent-service",
      "entryFile": "main",
      "sourceRoot": "apps/talent-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/talent-service/tsconfig.app.json"
      }
    },
    "@nnpp/sso-client": {
      "type": "library",
      "root": "libs/sso-client",
      "entryFile": "index",
      "sourceRoot": "libs/sso-client/src",
      "compilerOptions": {
        "tsConfigPath": "libs/sso-client/tsconfig.lib.json"
      }
    },
    "@tuan/common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "@tuan/contracts": {
      "type": "library",
      "root": "libs/contracts",
      "entryFile": "index",
      "sourceRoot": "libs/contracts/src",
      "compilerOptions": {
        "tsConfigPath": "libs/contracts/tsconfig.lib.json"
      }
    },
    "@nnpp/talent-client": {
      "type": "library",
      "root": "libs/talent-client",
      "entryFile": "index",
      "sourceRoot": "libs/talent-client/src",
      "compilerOptions": {
        "tsConfigPath": "libs/talent-client/tsconfig.lib.json"
      }
    }
  }
}